<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pasturePalInfoLayout"
    android:layout_gravity="center"
    android:gravity="center"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center_horizontal"
                            style="@style/PasturePalText"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:cardCornerRadius="8dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="16dp">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/logo"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pasture_pal_desc1"
                            android:fontFamily="@font/montserrat"
                            android:textSize="16sp"
                            android:justificationMode="inter_word"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginStart="16dp">

                        <VideoView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/pasturePalDemoVideo"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pasture_pal_desc2"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp"
                    android:justificationMode="inter_word"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gmelina"
                    android:textColor="@color/midGreen"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balinghoy"
                    android:textColor="@color/midGreen"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ipil-ipil"
                    android:textColor="@color/midGreen"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hagunoy"
                    android:textColor="@color/midGreen"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Talahib"
                    android:textColor="@color/midGreen"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monggo"
                    android:textColor="@color/midGreen"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patani"
                    android:textColor="@color/midGreen"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pasture_pal_desc3"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp"
                    android:justificationMode="inter_word"
                    android:layout_marginBottom="16dp"/>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>