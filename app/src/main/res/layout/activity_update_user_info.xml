<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/updateUserProfileLayout"
    style="@style/ActivityBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/midGreen">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/back"
            android:src="@drawable/baseline_arrow_back_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update User"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/white1"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:paddingBottom="60dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Profile"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="100dp"
                    android:backgroundTint="@color/midGreen">

                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="50dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/profile_background_playstore"
                            android:scaleType="centerCrop"
                            android:id="@+id/updateProfileImg"/>

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose profile"
                        android:textSize="18sp"
                        android:fontFamily="@font/montserrat"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="picture"
                        android:textSize="18sp"
                        android:fontFamily="@font/montserrat"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="First Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/updateFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextColor"
                android:fontFamily="@font/montserrat"
                android:hint="First Name"
                android:padding="8dp"
                android:textSize="18sp"
                android:maxLines="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Middle Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/updateMiddleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextColor"
                android:fontFamily="@font/montserrat"
                android:hint="Middle Name"
                android:padding="8dp"
                android:textSize="18sp"
                android:maxLines="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Last Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/updateLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextColor"
                android:fontFamily="@font/montserrat"
                android:hint="Last Name"
                android:padding="8dp"
                android:textSize="18sp"
                android:maxLines="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Sex"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/radioSex"
                android:gravity="center">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/male"
                    android:text="Male"
                    android:checked="true"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/female"
                    android:layout_marginLeft="20dp"
                    android:text="Female"/>

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Age"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/updateAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextColor"
                android:fontFamily="@font/montserrat"
                android:hint="Age"
                android:inputType="numberDecimal"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Role"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:hint="Select Role"
                android:layout_marginBottom="8dp">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/userRoleATV"
                    android:inputType="none"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Address"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Barangay"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/updateBarangay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextColor"
                android:fontFamily="@font/montserrat"
                android:hint="Barangay"
                android:padding="8dp"
                android:textSize="18sp"
                android:maxLines="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Municipality"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/updateMunicipality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextColor"
                android:fontFamily="@font/montserrat"
                android:hint="Municipality"
                android:padding="8dp"
                android:textSize="18sp"
                android:maxLines="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Province"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/updateProvince"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextColor"
                android:fontFamily="@font/montserrat"
                android:hint="Province"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:textSize="18sp"
                android:maxLines="1"/>

            <Button
                android:id="@+id/updateUserBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                style="@style/PrimaryButton"
                android:textColor="@color/white1"
                android:fontFamily="@font/montserrat_medium"
                android:text="Update User"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>