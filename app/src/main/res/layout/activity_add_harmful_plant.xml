<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddHarmfulPlantActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/midGreen">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/back"
            android:src="@drawable/baseline_arrow_back_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Harmful Plant"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/white1"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CardBackground"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harmful Plant Images"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/harmfulPlantsImages"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/primary_button"
                    android:text="Add Images"
                    android:textColor="@color/white1"
                    android:id="@+id/addImagesBtn"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Plant Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addHarmfulPlantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextColor"
                android:fontFamily="@font/montserrat"
                android:hint="Plant Name"
                android:padding="8dp"
                android:textSize="18sp"
                android:maxLines="1"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Common Names"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addHarmfulPlantCommonNames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextColor"
                android:fontFamily="@font/montserrat"
                android:hint="Name 1, Name 2, etc."
                android:padding="8dp"
                android:textSize="18sp"
                android:maxLines="1"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Plant Description"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addHarmfulPlantDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextColor"
                android:fontFamily="@font/montserrat"
                android:hint="Plant Description"
                android:lines="8"
                android:gravity="start"
                android:padding="8dp"
                android:textSize="18sp"
                android:maxLines="1"
                android:scrollbars="vertical"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Abundant Location"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addHarmfulPlantLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextColor"
                android:fontFamily="@font/montserrat"
                android:hint="Common locations of the plant"
                android:padding="8dp"
                android:textSize="18sp"
                android:lines="5"
                android:gravity="start"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Harmful Parts"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addHarmfulPlantParts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextColor"
                android:fontFamily="@font/montserrat"
                android:hint="Part 1, Part 2, etc."
                android:padding="8dp"
                android:textSize="18sp"
                android:maxLines="1"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Plant Toxins"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:hint="Select Toxins"
                        android:layout_marginBottom="10dp">

                        <AutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/harmfulPlantToxinsATV"
                            android:inputType="none"/>

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <ImageButton
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:backgroundTint="@color/midGreen"
                    android:padding="8dp"
                    android:src="@drawable/baseline_add_24"
                    android:id="@+id/addPlantToxinBtn"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toxin not on the lists? "
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp"
                    style="@style/TextColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Toxins Here"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/midGreen"
                    android:id="@+id/goToToxinsActivity"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/addedToxinRec"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Guidelines"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/addHarmfulPlantGuides"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/EditTextColor"
                    android:fontFamily="@font/montserrat"
                    android:hint="Guide"
                    android:padding="8dp"
                    android:textSize="18sp"
                    android:maxLines="2"
                    android:gravity="start"
                    android:scrollbars="vertical"
                    android:layout_weight="1"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/primary_button"
                        android:padding="8dp"
                        android:src="@drawable/baseline_add_24"
                        android:id="@+id/addPlantGuideBtn"
                        android:layout_marginLeft="10dp" />

                </RelativeLayout>



            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/harmfulPlantGuidesRec"
                android:layout_marginBottom="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/PrimaryButton"
                android:text="Add Harmful Plant"
                android:textSize="18sp"
                android:textColor="@color/white1"
                android:fontFamily="@font/montserrat_medium"
                android:id="@+id/addHarmfulPlantBtn"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>